
<%- include('../Layouts/header') %>



      <!--end::Sidebar-->
      <!--begin::App Main-->
      <main class="app-main">
        <!--begin::App Content Header-->
        <div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Edit Admin Record</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/dashBoard">DashBoard</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Edit Admin Record</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <!--begin::App Content-->
        <div class="app-content">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row g-4">
              <!--begin::Col-->
              <!--end::Col-->
              <!--begin::Col-->
              <div class="col-md-8 mx-auto">
                <!--begin::Quick Example-->
               
                <!--end::Quick Example-->
                <!--begin::Input Group-->
               
                <!--end::Input Group-->
                <!--begin::Horizontal Form-->
                <div class="card card-primary card-outline mb-4">
                  <!--begin::Header-->
                  <div class="card-header"><div class="card-title">Edit Admin Record</div></div>
                  <!--end::Header-->
                  <!--begin::Form-->
                  <form method="post" action="/editAdmin" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= adminData.id %>" >
                    <!--begin::Body-->
                    <div class="card-body">
                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">First Name</label>
                        <div class="col-sm-10">
                          <input type="text" name="fName" value="<%= adminData.name.split(' ')[0] %>" class="form-control" id="inputEmail3" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Last Name</label>
                        <div class="col-sm-10">
                          <input type="text" name="lName" value="<%= adminData.name.split(' ')[1] %>" class="form-control" id="inputEmail3" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                          <input type="email" name="email" value="<%= adminData.email %>" class="form-control" id="inputEmail3" />
                        </div>
                      </div>

                      <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                        <div class="col-sm-10">
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="radio" 
                              name="gender" 
                              id="gridRadios1"
                              value="Male" <%= adminData.gender==='Male'?'checked':'' %>
                            />
                            <label class="form-check-label" for="gridRadios1"> Male</label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="radio" 
                              name="gender" 
                              id="gridRadios1"
                              value="Female" <%= adminData.gender==='Female'?'checked':'' %>
                            />
                            <label class="form-check-label" for="gridRadios1"> Female</label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="radio" 
                              name="gender"
                              id="gridRadios1"
                              value="Other" <%= adminData.gender==='Other'?'checked':'' %>
                            />
                            <label class="form-check-label" for="gridRadios1"> Other</label>
                          </div>
                        </div>
                      </fieldset>

                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label pt-0 text-nowrap">Select Hobby</label>
                        <% hobbyNames = ["Reading","Writing","Playing","Music"] %> 
                        <div class="col-sm-10">
                          <% hobbyNames.map((item)=>{ %>
                            <div class="form-check">
                              <input class="form-check-input" name="hobby" value="<%= item %>"
                               <%= adminData.hobby.includes(item)?'checked':'' %> type="checkbox" id="gridCheck1" />
                              <label class="form-check-label" for="gridCheck1">
                                <%= item %>
                              </label>
                            </div>
                          <% }) %>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label pt-0">Select City</label>
                        <% cityNames = ["Surat","Baroda","Bhavnagar","Mumbai"] %> 
                        <div class="col-sm-10">
                            <select class="form-select" name="city" id="validationCustom04" required>
                                <option value="">-- Select City</option>
                                <% cityNames.map((item)=>{ %>
                                    <option value="<%= item %>" <%= adminData.city===item ?'selected':'' %> ><%= item %></option>
                                  <% }) %>
                            </select>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label text-nowrap">Upload Image</label>
                        <div class="col-sm-10">
                            <div class="input-group mb-3">
                                <input type="file" name="admin_image" class="form-control" id="inputGroupFile02" />
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>
                            <img src="<%= adminData.admin_image %>" title="image" height="100px" alt="image"/>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">About</label>
                        <div class="col-sm-10">
                            <textarea name="about" class="form-control"><%= adminData.about %></textarea>
                        </div>
                      </div>

                    </div>
                    <!--end::Body-->
                    <!--begin::Footer-->
                    <div class="card-footer text-center">
                      <button type="submit" class="btn btn-primary">Update</button>
                      <a href="/viewAdmin" class="btn btn-secondary">cancel</a>
                    </div>
                    <!--end::Footer-->
                  </form>
                  <!--end::Form-->
                </div>
                <!--end::Horizontal Form-->
              </div>
              <!--end::Col-->
              <!--begin::Col-->
              
              <!--end::Col-->
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content-->
      </main>
      <!--end::App Main-->
      <!--begin::Footer-->
      


<%- include('../Layouts/footer') %>
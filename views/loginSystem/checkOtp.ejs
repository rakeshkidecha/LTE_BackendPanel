  <!--begin::Body-->
  <body class="login-page bg-body-secondary">
    <div class="login-box">
      <div class="login-logo">
        <a href="../index2.html"><b>Admin</b>LTE</a>
      </div>
      <!-- /.login-logo -->
      <div class="card">
        <div class="card-body login-card-body">
          <p class="login-box-msg p-0">Enter Verification OTP. <br/> send in <b><%= adminEmail.substr(0,2) %> ********** <%= adminEmail.substr(adminEmail.indexOf('@')-3) %></b></p>
          <div class="text-end mt-2 mb-3">
            <a href="/checkEmail" class="nav-link text-primary">Change Email</a>
          </div>
          <form action="/verifyOtp" method="post">
            <div class="input-group mb-3">
              <input type="password" name="otp" class="form-control" placeholder="Enter opt" />
            </div>
            <% if(isOtpCookie){ %>
              <p id="expirimsg"class='text-danger'>opt expire in <span id="timer"></span>s</p>
              <p id="resend" class='text-primary' style="cursor: pointer; display: none;">Resend</p>
            <% } else { %>
              <p class="text-danger">OTP Could be Expired</p>
              <p id="resend" class='text-primary' style="cursor: pointer; ">Resend</p>
            <% } %>
            <!--begin::Row-->
              <div>
                <div class="d-grid gap-2">
                  <button type="submit" class="btn btn-primary">verify OTP</button>
                </div>
              </div>
            <!--end::Row-->
          </form>
          <form style="display: none;" method="post" action="/verifyEmail">
            <input type="text" name="email" value="<%= adminEmail %>">
            <button id="btn" type="submit">btn</button>
          </form>
          <!-- /.social-auth-links -->
        </div>
        <!-- /.login-card-body -->
      </div>
    </div>
    <!-- /.login-box -->
    <!--begin::Third Party Plugin(OverlayScrollbars)-->
    <script
      src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js"
      integrity="sha256-dghWARbRe2eLlIJ56wNB+b760ywulqK3DzZYEpsg2fQ="
      crossorigin="anonymous"
    ></script>
    <!--end::Third Party Plugin(OverlayScrollbars)--><!--begin::Required Plugin(popperjs for Bootstrap 5)-->
